/**
 * Implementation of hook_block_info();
 */
function taxonomy_menu_block_block_info() {
  // get all our current blocks
  $tmb_array = variable_get('taxonomy_menu_block', $default = NULL);
  $tmb_array = unserialize($tmb_array);

  if (!empty($tmb_array)) {
    foreach ($tmb_array as $tmb_delta => $tmb) {
      $blocks[$tmb_delta] = array(
          'info' => t('Taxonomy menu block - ' . $tmb['name']),
          'cache' => DRUPAL_NO_CACHE,
      );
    }
    return $blocks;
  }
}

/**
 * Implementation of hook_block_view();
 */
function taxonomy_menu_block_block_view($delta = '') {
  // get all our current blocks
  $tmb_array = variable_get('taxonomy_menu_block', $default = NULL);
  $tmb_array = unserialize($tmb_array);

  if (!empty($tmb_array)) {
    foreach ($tmb_array as $tmb_delta => $tmb) {
      if ($delta == $tmb_delta) {
        $block = array();
        $block['subject'] = $tmb['name'];

        // build tree & active trail
        // this will return an array with two entries, one for our (nested) tree and one for our active trail
        $result = taxonomy_menu_block_build_taxonomy_tree($tmb);

        // if we have results, continue
        if (!empty($result['terms'])) {
          $items = taxonomy_menu_block_generate_menu($tmb, $result);
          $content = theme('taxonomy_menu_block', array('items' => $items));
          $block['content'] = $content;
        } else {
          $block['content'] = t('No terms to display.');
        }

        return $block;
      }
    }
  }
}

